<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".AddProjectActivity">

    <ImageView
        android:id="@+id/backIconID"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backicon"
        app:tint="#333333" />

    <TextView
        android:id="@+id/addTitleHeaderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New Project"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/backIconID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/backIconID" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backIconID">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingTop="10dp"
            android:paddingEnd="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="CATEGORY"
                android:textColor="#D09D06"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoryTextID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:padding="16dp"
                android:text="PROJECTS"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="PROJECT TITLE"
                android:textColor="#D09D06"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addTitleEditID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:hint="e.g., My Awesome Project"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="PROJECT DESCRIPTION"
                android:textColor="#D09D06"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addDescriptionEditID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top|start"
                android:hint="A description of the project..."
                android:minLines="5"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="IMAGE"
                android:textColor="#D09D06"
                android:textSize="17dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/selectImageButtonID"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="#0B7181"
                android:text="Select Image from Gallery"
                app:cornerRadius="16dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <ImageView
                    android:id="@+id/imagePreviewViewID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    tools:src="@drawable/arduinointerface"
                    tools:visibility="visible" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="PIN CONFIGURATION"
                android:textColor="#D09D06"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addPinConfigEditID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top|start"
                android:hint="LED Anode -> Pin 13\nLED Cathode -> GND"
                android:minLines="3"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#9E9E9E"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="8dp"
                android:text="SAMPLE CODE"
                android:textColor="#D09D06"
                android:textSize="17dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addSampleCodeEditID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:background="@drawable/edit_text_background"
                android:fontFamily="monospace"
                android:gravity="top|start"
                android:hint="void setup() {\n  pinMode(13, OUTPUT);\n}"
                android:minLines="5"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#9E9E9E"
                android:textSize="14sp" />

            <Button
                android:id="@+id/saveButtonID"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#087E8E"
                android:text="SAVE PROJECT"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="16dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>